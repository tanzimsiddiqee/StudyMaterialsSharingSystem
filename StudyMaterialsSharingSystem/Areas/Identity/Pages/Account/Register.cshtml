@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
                <div class="col-lg-7 mx-auto d-block">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Input.Name" class="form-control form-control-user" placeholder="Enter Full Name" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.DOB" class="form-control form-control-user" placeholder="Date of Birth" />
                                <span asp-validation-for="Input.DOB" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control form-control-user" placeholder="Enter Email Address" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="input-group">
                                        <input asp-for="Input.Password" class="form-control form-control-user" placeholder="Password" data-toggle="password" />
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-eye"></i></span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <div class="input-group">
                                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-user" placeholder="Confirm Password" data-toggle="password" />
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-eye"></i></span>
                                        </div>
                                    </div>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">Register</button>
                            <hr>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a asp-area="Identity" asp-page="/Account/Login" class="small">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
