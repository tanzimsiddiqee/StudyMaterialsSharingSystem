@model StudyMaterialsSharingSystem.Models.SoftwareViewModels.SoftwareInfoViewModel

@{
    ViewData["Title"] = "Add";
}
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7 mx-auto d-block">
                    <div class="p-5">
                        <div class="text-center">
                            <h4 class="text-center">Software Informtion</h4>
                        </div>
                        <form asp-action="Add">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="SoftwareTypeID" class="control-label"></label>
                                    <select asp-for="SoftwareTypeID" class="form-control" asp-items="ViewBag.SoftwareTypeID">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SoftwareName" class="control-label"></label>
                                    <input asp-for="SoftwareName" class="form-control"  placeholder="Software Name"/>
                                    <span asp-validation-for="SoftwareName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Version" class="control-label"></label>
                                    <input asp-for="Version" class="form-control"  placeholder="Version 00.00.00"/>
                                    <span asp-validation-for="Version" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Write something about Software"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group float-right">
                                    <input type="submit" value="Next" class="btn btn-primary" />
                                </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
