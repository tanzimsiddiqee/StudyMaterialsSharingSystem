@{
    Layout = "_Layout";
    ViewData["Title"] = "Study Materials Sharing System";
}
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/home.svg" alt="Study Materials Sharing System" width="1100" height="400" />
                <div class="carousel-caption" role="option">
                    <h3 class="text-warning">Study Materials Sharing System</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/books.svg" alt="Books Store" width="1100" height="400" />
                <div class="carousel-caption" role="option">
                    <h4 class="text-light">Share your unnecessary products</h4>
                    <h4 class="text-light">thats will helps others</h4>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/mess.svg" alt="Hostal & Mess" width="1100" height="400" />
                <div class="carousel-caption" role="option">
                    <h4 class="text-light">Choose your appropriate products</h4>
                    <h4 class="text-light">thats is needed</h4>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h2> Materials Categories</h2>
    </div>
    <div class="card-body">
        <!-- Three columns of text below the carousel -->
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-70">
                    <img class="card-img-top" src="~/images/book.jpg" alt="Book">
                    <div class="card-body text-center text-gray-900">
                        <h6 class="card-title font-weight-bold">Books</h6>
                        <h6 class="card-text">Available Books : @ViewBag.books</h6>
                        <p class="card-text"></p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-outline-primary mx-auto d-block" asp-area="" asp-controller="Books" asp-action="Index">Go &raquo;</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-70">
                    <img class="card-img-top" src="~/images/document.jpg" alt="Document">
                    <div class="card-body text-center text-gray-900">
                        <h6 class="card-title font-weight-bold">Documents</h6>
                        <h6 class="card-text">Available Documents : @ViewBag.documents</h6>
                        <p class="card-text"></p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-outline-primary mx-auto d-block" asp-area="" asp-controller="Documents" asp-action="Index">Go &raquo;</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-70">
                    <img class="card-img-top" src="~/images/house.jpg" alt="House">
                    <div class="card-body text-center text-gray-900">
                        <h6 class="card-title font-weight-bold">Houses</h6>
                        <h6 class="card-text">Available Houses : @ViewBag.houses</h6>
                        <p class="card-text"></p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-outline-primary mx-auto d-block" asp-area="" asp-controller="Houses" asp-action="Index">Go &raquo;</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-70">
                    <img class="card-img-top" src="~/images/soft.png" alt="Book">
                    <div class="card-body text-center text-gray-900">
                        <h6 class="card-title font-weight-bold">Softwares</h6>
                        <h6 class="card-text">Available Softwares : @ViewBag.softwares</h6>
                        <p class="card-text"></p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-outline-primary mx-auto d-block" asp-area="" asp-controller="Softwares" asp-action="Index">Go &raquo;</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
