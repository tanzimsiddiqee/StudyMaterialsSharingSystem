                <a asp-controller="Houses" asp-action="Submitted" class="list-group-item-action">
                    <h4 class="small font-weight-bold">Submitted (@ViewBag.submittedHouses)<span class="float-right">@ViewBag.HSPercent%</span></h4>
                    <div class="progress mb-2">
                        <div class="progress-bar bg-gradient-warning" role="progressbar" style="width: @ViewBag.HSPercent%" aria-valuenow="@ViewBag.HSPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<hr class="sidebar-divider">

<!-- Content Row -->
<div class="row">
    <!-- Content Column -->
    <div class="col-lg-12 mb-4">
        <!-- Project Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Materials</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">Materials (@ViewBag.total)<span class="float-right">Total 100%</span></h4>
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <a asp-controller="Books" asp-action="Index" class="list-group-item-action">
                    <h4 class="small font-weight-bold">Books (@ViewBag.Books)<span class="float-right">@ViewBag.BPercent%</span></h4>
                    <div class="progress mb-4">
