                    <div class="progress mb-2">
                        <div class="progress-bar bg-gradient-danger" role="progressbar" style="width:  @ViewBag.HRPercent%" aria-valuenow="@ViewBag.HRPercent" aria-valuemin="0" aria-valuemax="100"></div>
