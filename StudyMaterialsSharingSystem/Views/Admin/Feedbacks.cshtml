@model IEnumerable<StudyMaterialsSharingSystem.Models.Feedback>

@{
    ViewData["Title"] = "Feedback";
}

<div class="container">
    <div class="list-group">
        @foreach (var item in Model)
        {

            @if (item.Read == false)
            {
                <form asp-action="ReadFeedBack" asp-route-id="@item.ID" id="form1">
                    <button type="submit" class="list-group-item list-group-item-action list-group-item-dark d-flex justify-content-between align-items-center my-2">
                        <div class="text-info font-italic font-weight-bold">
                            <div class="m-0 font-weight-bold text-primary">@item.User</div>
                            <span class="badge badge-primary badge-pill"><i class="far fa-clock"> @item.dateTime</i></span>
                            <div class="text-gray-900 mt-2 pt-1">
                                <i class="fas fa-comments-dollar"> @item.Comment</i>
                            </div>

                        </div>
                        <span class="btn btn-danger" data-toggle="modal" data-target="#Delete"><i class="far fa-trash-alt p-0"></i></span>
                    </button>
                </form>
            }
            else
            {
                <div class="list-group-item  list-group-item-light d-flex justify-content-between align-items-center my-2">
                    <div class="text-info font-italic font-weight-bold">
                        <div class="m-0 font-weight-bold text-primary">@item.User</div>
                        <span class="badge badge-primary badge-pill"><i class="far fa-clock"> @item.dateTime</i></span>
                        <div class="text-gray-900 mt-2 pt-1">
                            <i class="fas fa-comments-dollar"> @item.Comment</i>
                        </div>

                    </div>
                    <span class="btn btn-danger" data-toggle="modal" data-target="#Delete"><i class="far fa-trash-alt p-0"></i></span>
                </div>
            }
            <!-- Delete Modal-->
            <div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Delete ?</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"><i class="fas fa-times"></i></span>
                            </button>
                        </div>
                        <div class="modal-body">  Are you want to delete @item.User's Feedback?</div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                            <form class="form-inline" asp-action="DeleteFeedBack" asp-route-id="@item.ID">
                                <button type="submit" class="btn btn-danger">Detete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
 </div>

        
    


