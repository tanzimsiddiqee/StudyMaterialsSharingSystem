@model IEnumerable<StudyMaterialsSharingSystem.Models.Reply>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="list-group">
        @foreach (var item in Model)
        {

            @if (item.Request.Read == false)
            {
            <a asp-action="Replies" asp-route-id="@item.RequestID" class="list-group-item list-group-item-action list-group-item-dark d-flex justify-content-between align-items-center my-2">
                <div class="text-info font-italic font-weight-bold">
                    <div class="m-0 font-weight-bold text-primary"> Request For : @item.Request.Material</div>
                    <div class="m-0 font-weight-bold text-primary">@item.Sender</div>
                    <div class="text-gray-900 mt-2 pt-1">
                        <i class="fas fa-comments-dollar"> @item.Message</i>
                    </div>
                </div>
                <span class="badge badge-primary badge-pill"><i class="far fa-clock"> @item.dateTime</i></span>
            </a>
            }
            else
            {
            <a asp-action="Replies" asp-route-id="@item.RequestID" class="list-group-item list-group-item-action list-group-item-light d-flex justify-content-between align-items-center my-2">
                <div class="text-info font-italic font-weight-bold">
                    <div class="m-0 font-weight-bold text-primary"> Request For : @item.Request.Material</div>
                    <div class="m-0 font-weight-bold text-primary">@item.Sender</div>
                    <div class="text-gray-900 mt-2 pt-1">
                        <i class="fas fa-comments-dollar"> @item.Message</i>
                    </div>
                </div>
                <span class="badge badge-primary badge-pill"><i class="far fa-clock"> @item.dateTime</i></span>
            </a>
            }
        }
    </div>
</div>