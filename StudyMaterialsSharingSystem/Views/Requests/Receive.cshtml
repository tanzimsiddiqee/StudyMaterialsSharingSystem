@model IEnumerable<StudyMaterialsSharingSystem.Models.Request>

@{
    ViewData["Title"] = "Receiver";
}
<div class="container">
    <table class="table table-hover" id="message">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Read == false)
                        {
                            <div class=" table-info p-3">
                                <div class="text-info font-weight-bold">
                                    From :
                                    <a asp-action="Replies" asp-route-id="@item.ID" class="btn btn-link m-0">
                                        <h6 class="m-0 font-weight-bold text-primary">@item.Sender</h6>
                                    </a>
                                </div>
                                <div class="text-black-50 font-weight-bold"> Request For: @item.Material</div>
                            </div>
                        }
                        else
                        {
                            <div class="text-info font-weight-bold">
                                From :
                                <a asp-action="Replies" asp-route-id="@item.ID" class="btn btn-link m-0">
                                    <h6 class="m-0 font-weight-bold text-primary">@item.Sender</h6>
                                </a>
                            </div>
                            <div class="text-black-50 font-weight-bold"> Request For: @item.Material</div>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

