@model IEnumerable<StudyMaterialsSharingSystem.Models.Feedback>

@{
    ViewData["Title"] = "Feedback";
}

<div class="container">
    <div class="list-group">
        @foreach (var item in Model)
        {
            @if (item.Read == false)
            {
                <form asp-controller="Manager" asp-action="ReadFeedBack" asp-route-id="@item.ID" id="form1">
                    <button type="submit" class="list-group-item list-group-item-action list-group-item-dark d-flex justify-content-between align-items-center my-2">
                        <div class="text-info font-italic font-weight-bold">
                            <div class="m-0 font-weight-bold text-primary">@item.User</div>
                            <span class="badge badge-primary badge-pill"><i class="far fa-clock"> @item.dateTime</i></span>
                            <div class="text-gray-900 mt-2 pt-1">
                                <i class="fas fa-comments-dollar"> @item.Comment</i>
                            </div>
                        </div>
                    </button>
                </form>
            }
            else
            {
                <div class="list-group-item  list-group-item-light d-flex justify-content-between align-items-center my-2">
                    <div class="text-info font-italic font-weight-bold">
                        <div class="m-0 font-weight-bold text-primary">@item.User</div>
                        <span class="badge badge-primary badge-pill"><i class="far fa-clock"> @item.dateTime</i></span>
                        <div class="text-gray-900 mt-2 pt-1">
                            <i class="fas fa-comments-dollar"> @item.Comment</i>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
